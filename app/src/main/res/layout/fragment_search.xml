<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/marginHorizontal_search"
                android:layout_marginTop="@dimen/marginTop_search"
                android:layout_marginBottom="@dimen/marginBottom_search"
                android:background="@drawable/searchview_background"
                app:iconifiedByDefault="false"
                app:queryBackground="@color/color_transparente"
                app:queryHint="Buscar">

            </androidx.appcompat.widget.SearchView>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movieRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/marginStart_search"
            android:layout_marginEnd="@dimen/marginEnd_search"
            />

    </LinearLayout>
</ScrollView>